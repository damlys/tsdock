{
  "name": "@damlys/tsdock",
  "version": "0.0.1",
  "description": "TypeScript starter for Node.js projects.",
  "keywords": [],
  "author": "Damian Łysiak",
  "contributors": [],
  "license": "UNLICENSE",
  "repository": {
    "type": "git",
    "url": "git://github.com/damlys/tsdock.git"
  },
  "bugs": {
    "url": "https://github.com/damlys/tsdock/issues"
  },
  "private": false,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "tsdock": "dist/bin/main.js"
  },
  "engines": {
    "node": ">=18.4.0 <19"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.2",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@damlys/standard-version-updater-docker": "^1.0.0",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "enable-git-hooks": "husky install",
    "build": "rimraf ./dist && tsc",
    "ts:exec": "ts-node ./src/bin/main.ts",
    "ts:repl": "ts-node-dev ./src/bin/main.ts",
    "js:exec": "node ./dist/bin/main.js",
    "js:repl": "nodemon ./dist/bin/main.js",
    "js:debug": "node --inspect='0.0.0.0:9229' ./dist/bin/main.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix .",
    "lint:check": "eslint .",
    "test": "jest --verbose",
    "test:coverage": "rimraf ./coverage && jest --coverage",
    "test:watch": "jest --watchAll",
    "test:unit": "jest ./tests/unit",
    "test:system": "jest ./tests/system",
    "bump-version": "standard-version --skip.changelog --skip.commit --skip.tag",
    "release": "standard-version"
  }
}
